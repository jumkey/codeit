<idea-plugin>
    <id>org.cafeboy.idea.plugin.codeit</id>
    <name>Codeit</name>
    <vendor email="474868678@qq.com" url="https://www.cafeboy.org">cafeboy</vendor>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <toolWindow id="Codeit" icon="/icons/logo_13x13.png" anchor="bottom"
                    canCloseContents="true"
                    factoryClass="org.cafeboy.idea.plugin.codeit.ui.CodeitToolWindowFactory"/>
        <projectService
                serviceImplementation="org.cafeboy.idea.plugin.codeit.core.history.HistoryService"/>
        <projectConfigurable instance="org.cafeboy.idea.plugin.codeit.core.history.HistoryConfigurable"
                             id="preferences.history"/>
        <projectService serviceImplementation="org.cafeboy.idea.plugin.codeit.ui.CodeitManager"/>
    </extensions>

    <resource-bundle>messages.Codeit</resource-bundle>
    <actions>
        <!-- Add your actions here -->
        <action id="generate" class="org.cafeboy.idea.plugin.codeit.actions.GenQrAction" icon="/icons/logo_13x13.png"
                description="Generate qr code">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
        <action id="paste" class="org.cafeboy.idea.plugin.codeit.actions.PasteAction" use-shortcut-of="$Paste" icon="AllIcons.Actions.Menu_paste"/>
        <group id="my.pop.edit">
            <reference ref="EditorCut"/>
            <reference ref="EditorCopy"/>
<!--            <reference ref="EditorPaste"/>-->
            <reference ref="paste"/>
            <separator/>
            <reference ref="EditorDeleteLine"/>
        </group>
        <group id="my.pop.qr">
            <action id="save" class="org.cafeboy.idea.plugin.codeit.actions.SaveAction" icon="AllIcons.Actions.Menu_saveall"/>
            <action id="copy" class="org.cafeboy.idea.plugin.codeit.actions.CopyAction" icon="AllIcons.Actions.Copy"/>
        </group>
        <group id="my.toolbar">
            <action id="execute" class="org.cafeboy.idea.plugin.codeit.actions.ExecAction"
                    icon="AllIcons.Actions.Execute"/>
            <action id="read.qr" class="org.cafeboy.idea.plugin.codeit.actions.ReadQrAction"
                    icon="AllIcons.Actions.ShowCode"/>
            <action id="using.cli.im" class="org.cafeboy.idea.plugin.codeit.actions.EnableCliAction"
                    icon="AllIcons.Actions.SetDefault"/>
        </group>
    </actions>
</idea-plugin>